nodes:
{% for host in groups['rke_nodes'] %}
  - address: {{ hostvars[host].ansible_host }}
    user: {{ hostvars[host].ansible_user }}
    role: [{% if hostvars[host].node_role == 'master' %}controlplane,etcd{% else %}worker{% endif %}]
    ssh_key_path: {{ ansible_ssh_private_key_file | default('~/.ssh/id_rsa') }}
{% endfor %}
services: {}
